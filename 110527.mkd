gprof

    $ ./configure --enable-static --enable-profile --enable-debug
    $ echo "prg_LDFLAGS=-static-libtool-libs" >> Makefile.am
    $ make
    $ ./prg params
    $ gprof ./prg gmon.out > profile.txt

